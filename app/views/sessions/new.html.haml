.uk-align-center.uk-padding-large{style: 'width: 380px;'}
  .uk-card.uk-card-default.uk-card-body
    %h3.uk-card-title.uk-text-center LOGIN
    = form_for(:session, url: login_path, html: {class: 'uk-panel uk-panel-box uk-form'}) do |f|
      .uk-form-row.uk-padding-small= f.email_field :email, class: 'uk-width-1-1 uk-form-large', placeholder: 'Username'
      .uk-form-row.uk-padding-small= f.password_field :password, class: 'uk-width-1-1 uk-form-large', placeholder: 'Password'
      .uk-form-row.uk-padding-small
        %label.uk-text-small
          %input{type: 'checkbox'} Remember Me
        .uk-float-right= f.submit 'Login', class: 'uk-button uk-button-primary'
