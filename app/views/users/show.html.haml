= render 'layouts/flashes'
%h1.uk-h1 Welcome...#{@user.first_name}#{@user.last_name}
%ul.uk-list
  %li= @user.first_name
  %li= @user.last_name
  %li= @user.email
  %li= @user.nick_name
  %li= @user.default_lat
  %li= @user.default_lng
.uk-margin
  = link_to '日記投稿画面へ', new_diary_path, class: 'uk-button uk-button-primary'
  = link_to '日記一覧へ', diaries_path, class: 'uk-button uk-button-default'
  = link_to '編集', edit_user_path, class: 'uk-button uk-button-secondary'
  = link_to 'ログアウト', logout_path, class: 'uk-button uk-button-danger'
