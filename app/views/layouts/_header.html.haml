%header.snapkin-header-background.uk-navbar-container
  .uk-navbar
    .uk-navbar-center.header-logo-wrap
      %a.header-logo{href: diaries_path}
        = image_tag 'logo.png'
    - if login?
      .uk-navbar-right
        %ul.uk-navbar-nav.uk-visible@m
          %li
            = link_to 'PROFILE', user_path(current_user), class: 'snapkin-header-list'
          %li
            = link_to 'LIST', diaries_path, class: 'snapkin-header-list'
          %li
            = link_to 'NEW POST', new_diary_path, class: 'snapkin-header-list'
.uk-navbar-container.uk-text-center
  = render 'layouts/flashes'
